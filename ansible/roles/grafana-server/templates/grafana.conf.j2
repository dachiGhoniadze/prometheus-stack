server {
    listen       80;
    server_name  grafana.devops.tbc;

  location / {
    proxy_set_header Host $host;
    proxy_pass http://127.0.0.1:3000;
  }

  # Proxy Grafana Live WebSocket connections.
  location /api/live/ {
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_pass http://127.0.0.1:3000;
  
  }
}